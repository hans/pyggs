# Styles that will be generated in head - remember, geocaching.com profile page
# requires styles in body, so this is just for local viewing
[@screen]


# Define some colors, we can use later via gradient helper
[@colors]
lightmax = rgb(255, 0, 0)
lightmin = rgb(255, 240, 0)
darkmax = rgb(225, 0, 0)
darkmin = rgb(225, 204, 0)
bordermax = rgb(179, 0, 0)
bordermin = rgb(179, 168, 0)


# The rest is definition of all other available classes through css helper

# Global wrapper
[gcstats]
font-size = 9pt
font-family = Verdana,'Geneva CE',lucida,sans-serif
color = black
background = white
line-height = normal

# Some basic classes, that should be used on every element of that kind
[caption]
font-weight = bold
font-size = 1.2em
text-align = left
padding = 0.2em 0.5em
background = black
color = white

[table]
width = 100%
margin = 0 auto 0.5em auto
border-collapse = separate
border-spacing = 2px

[td]
background = rgb(220,220,220)
padding = 0.2em 0.5em

[th]
background = rgb(190,190,190)
padding = 0.2em 0.5em
font-weight = normal
text-align = center

[small]
font-size = 0.75em

# Separator for table section used in :general
[endsection]
border-bottom = 1px rgb(100,100,100) solid

# Used for tables with specified column widths
[fixedtable]
table-layout = fixed

# DT matrix column width
[col-matrix]
width = 60px

# Used for layout tables
[layouttable]
border-spacing = 0
margin = 0

[td-layouttable]
background = inherit
padding = NULL
vertical-align = top

[endsection-bold-v]
border-right = 4px white solid

# Graph table in :myFindsHistory
[graph]
border-spacing = 1px
border = 1px solid white

[col-graph-header]
width = 80px

[col-graph]
width = 20px

[graph-cell]
vertical-align = bottom
text-align = center
padding = 0
padding-top = 5px

[graph-bar]
font-size = 0
border = 1px solid black
border-bottom = none

[graph-header]
padding = 1px 0

[graph-leftheader]
text-align = left
padding = 0 3px

# History table in :myFindsHistory
[col-history-header]
width = 140px

[col-history-numbers]
width = 50px

# Text align
[right]
text-align = right

[center]
text-align = center

# Table cell with icon of size/type
[td-icon]
padding = inherit
vertical-align = middle
